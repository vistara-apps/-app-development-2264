# FlashTrade Sim Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Farcaster/Neynar API
# Get your API key from https://neynar.com
REACT_APP_NEYNAR_API_KEY=your_neynar_api_key_here

# Base RPC URL
# Use the public endpoint or get a dedicated RPC from Alchemy/QuickNode
REACT_APP_BASE_RPC_URL=https://mainnet.base.org

# Airstack API
# Get your API key from https://airstack.xyz
REACT_APP_AIRSTACK_API_KEY=your_airstack_api_key_here

# Farcaster OAuth (Optional)
# Used for OAuth authentication flow
REACT_APP_FARCASTER_CLIENT_ID=flashtrade-sim

# Development Settings
# Set to 'development' for local development
NODE_ENV=development

# App Configuration
REACT_APP_APP_NAME=FlashTrade Sim
REACT_APP_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_DEMO_MODE=true
REACT_APP_ENABLE_FARCASTER_AUTH=true
REACT_APP_ENABLE_ADVANCED_CHARTS=true

# API Endpoints (Optional - for custom deployments)
# REACT_APP_CUSTOM_API_BASE_URL=https://your-api.com
# REACT_APP_WEBSOCKET_URL=wss://your-websocket.com
